@Article{Wehrle2021,
  author   = {Sebastian Wehrle and Katharina Gruber and Johannes Schmidt},
  journal  = {Energy Policy},
  title    = {The cost of undisturbed landscapes},
  year     = {2021},
  issn     = {0301-4215},
  pages    = {112617},
  volume   = {159},
  abstract = {By 2030, Austria aims to meet 100% of its electricity demand from domestic renewable sources, such as wind energy. Apart from the benefit of reducing CO2 emissions and, potentially, system cost, wind power is also associated with negative impacts at the local level, particularly its interference with landscape aesthetics. Some of these negative impacts might be avoided by using alternative renewable energy technologies. To better understand the trade-offs involved, we quantify the opportunity cost of wind power versus its best feasible alternative, which is solar photovoltaics in Austria. Methodologically, our analysis relies on the power system model medea, a technology-rich, partial-equilibrium model of the Austro-German electricity and district heating markets. Our findings suggest that the cost of undisturbed landscapes is considerable, even more so when solar PV is mainly realised on rooftops. Under a wide range of assumptions, the opportunity cost of wind power is high enough to allow for significant compensation of the ones affected by local, negative wind turbine externalities.},
  doi      = {https://doi.org/10.1016/j.enpol.2021.112617},
  keywords = {Externalities, Wind power, System design, Policy},
}

@Article{Grimsrud2021,
