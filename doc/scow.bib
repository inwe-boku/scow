@Article{Hoen2011,
  author    = {Ben Hoen and Ryan Wiser and Peter Cappers and Mark Thayer and Gautam Sethi},
  journal   = {Journal of Real Estate Research},
  title     = {Wind Energy Facilities and Residential Properties: The Effect of Proximity and View on Sales Prices},
